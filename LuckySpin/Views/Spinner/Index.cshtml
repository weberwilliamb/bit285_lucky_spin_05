@model LuckySpin.Models.Player
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<h1>Lucky Spin</h1>
<h2>Pick your Number</h2>
<form asp-for= "FirstName" action="/Spinner/Index" method="post">
    <fieldset>
        <label><input asp-for="FirstName" placeholder=" Your First Name" name="FirstName" /><span asp-validation-for="FirstName"></span></label>
        <label>
            <select name="Luck">
                <option selected disabled>Luck Number</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
            </select>
            <span asp-validation-for="Luck"></span>
        </label>
    </fieldset>
    <input type="submit" value="Start the Game" />
</form>